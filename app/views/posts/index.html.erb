<% provide(:title, "Home") %>
<p id="notice"><%= notice %></p>

<div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8">

        <h1 class="my-4">Posts
          <small>All the exclusive posts only for members</small>
        </h1>

        <!-- Blog Post -->
        <div class="card mb-4">
          <%= image_tag ('gotham.jpg'),  class:"card-img-top", alt:"Gotham city" %>
          <% @posts.each do |post| %>
          <div class="card-body">
            <h2 class="card-title"><%= post.title %></h2>
            <p class="card-text"><%= post.body %></p>
            <%= link_to 'Read More', post, class:"btn btn-success" %>
          </div>
          <div class="card-footer text-muted">
            Posted on <%= post.created_at %> By 
            <a href="#"><%= post.user.username %></a>
          </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
          </li>
        </ul>

      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            <div class="input-group">
              <%= render 'searches/form'%>
            </div>
          </div>
        </div>       
        
        <!-- Categories Widget -->
        <%= render 'tags/tags' %>
        <!-- Side Widget -->
        <div class="card my-4">
          <h5 class="card-header">Side Widget</h5>
          <div class="card-body">
            Lorem Ipsum
          </div>
        </div>

      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->